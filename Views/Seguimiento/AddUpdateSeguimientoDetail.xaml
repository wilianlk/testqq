<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exportacion.Views.Seguimiento.AddUpdateSeguimientoDetail"
             Title=".">
    
    <StackLayout Margin="10" Spacing="15">
        <VerticalStackLayout>
            <Label Text="Exportacion"  />
            <Entry Text="{Binding SeguimientoDetail.Exportacion}" Placeholder="Exportacion" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Fecha"  />
            <Entry Text="{Binding SeguimientoDetail.Fecha}" Placeholder="Fecha ()" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>

        <Button Text="Guardar" Command="{Binding AddUpdateSeguimientoCommand}"/>
    </StackLayout>
</ContentPage>