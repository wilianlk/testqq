<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exportacion.Views.Pdf.PdfModalAyudaView"
             IsVisible="False">
    <ContentView.Content>
        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="#80000000">
            <Frame BackgroundColor="White" CornerRadius="10" VerticalOptions="Center" HorizontalOptions="Center" Padding="10" WidthRequest="800" HeightRequest="500">
                <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Grid BackgroundColor="#f8f8f8" Padding="10">
                        <Label Text="AYUDA" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>
                        <Button Text="X" BackgroundColor="Black" TextColor="White" HorizontalOptions="End" Clicked="OnCloseButtonClicked"/>
                    </Grid>
                    <WebView x:Name="pdfWebView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>
